<% include ./partials/header %>

<div class = 'container'>

  <header class = 'jumbotron' style = 'padding-bottom: 4rem'>
    <h1>Sign Up as New User</h1>

    <div class = 'row'>
      <form class = 'col-lg-8 col-md-10 p-3' action = '/register' method = 'POST'>
        <input class = 'form-control mb-3' type = 'text' name = 'username' placeholder = 'Enter User Name ...'>
        <input class = 'form-control mb-3' type = 'password' name = 'password' placeholder = 'Enter Password ...'>
        <input class = 'btn btn-primary col-md-6' type = 'submit' value = 'Sign Up' class = 'btn btn-primary'>
        <a class = 'float-right mt-2' href = '/'>Go Back</a>
      </form>
    </div>
  </header>

</div>

