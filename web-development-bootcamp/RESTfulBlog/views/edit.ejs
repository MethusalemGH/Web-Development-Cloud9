<% include ./partials/header %>

<div class = 'ui main text container segment'>
  <div class = 'ui huge header'>Edit Blog</div>
  <form class = 'ui form' action = '/blogs/<%=blog._id%>?_method=PUT' method = 'POST'>
    <div class = 'field'>
      <label>Title:</label>
      <input type = 'text' name = 'blog[title]' placeholder = 'Blog Title ...' value = '<%=blog.title%>'>
    </div>
    <div class = 'field'>
      <label>Image:</label>
      <input type = 'text' name = 'blog[imageURL]' placeholder = 'Image URL ...' value = '<%=blog.imageURL%>'>
    </div>
    <div class = 'field'>
      <label>Content:</label>
      <textarea name = 'blog[body]' placeholder = 'Blog content ...' ><%=blog.body%></textarea>
    </div>
    <input class = 'ui small teal button' type = 'submit'>
  </form>
</div>

<% include ./partials/footer %>
