<% include ../partials/header %>

<div class = 'container'>

  <header class = 'jumbotron' style = 'padding-bottom: 4rem'>
    <h1>Create New Campground</h1>

    <div class = 'row'>
      <form class = 'col-lg-8 col-md-10 p-3' action = '/campgrounds' method = 'POST'>
        <input class = 'form-control mb-3' type = 'text' name = 'name' placeholder = 'Campground Name ...'>
        <input class = 'form-control mb-3' type = 'text' name = 'imageURL' placeholder = 'Image URL ...'>
        <textarea class = 'form-control h-50 mb-3' name = 'description' placeholder = 'Campground description ...'></textarea>
        <input class = 'btn btn-primary col-md-6' type = 'submit' value = 'Add Campground' class = 'btn btn-primary'>
        <a class = 'float-right mt-2' href = '/campgrounds'>View Campgrounds</a>
      </form>
    </div>
  </header>

</div>

